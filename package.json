{
  "name": "@noclaps/highlight",
  "version": "0.3.3",
  "description": "A syntax highlighting library that uses Tree-sitter",
  "homepage": "https://gitlab.com/noClaps/highlight",
  "bugs": {
    "url": "https://gitlab.com/noClaps/highlight/-/issues"
  },
  "license": "0BSD",
  "author": "noClaps <contact@zerolimits.dev> (https://zerolimits.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/noClaps/highlight.git"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/bun": "^1.1.16",
    "typescript": "^5.7.3"
  },
  "optionalDependencies": {
    "@noclaps/highlight-darwin-arm64": "0.3.3",
    "@noclaps/highlight-darwin-x64": "0.3.3",
    "@noclaps/highlight-linux-arm64-gnu": "0.3.3",
    "@noclaps/highlight-linux-arm64-musl": "0.3.3",
    "@noclaps/highlight-linux-x64-gnu": "0.3.3",
    "@noclaps/highlight-linux-x64-musl": "0.3.3",
    "@noclaps/highlight-win32-arm64-msvc": "0.3.3",
    "@noclaps/highlight-win32-x64-msvc": "0.3.3"
  },
  "scripts": {
    "artifacts": "napi artifacts -d ./dist --dist ./packages",
    "build": "napi build --platform --release --strip ./dist",
    "build:highlight": "bun build highlight.ts --minify --target node --outdir dist && tsc --project tsconfig.json",
    "bump": "bunx changelogen --bump && bun bump-version.ts"
  },
  "napi": {
    "name": "highlight",
    "triples": {
      "default": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "aarch64-apple-darwin"
      ]
    }
  },
  "type": "module",
  "exports": "./dist/highlight.js",
  "types": "./dist/highlight.d.ts",
  "files": [
    "dist/highlight.js",
    "dist/highlight.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  }
}
